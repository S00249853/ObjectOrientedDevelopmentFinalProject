<Window x:Class="OOD_Project.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOD_Project"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="tbxName" HorizontalAlignment="Left" Margin="357,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="292,129,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxPassword" HorizontalAlignment="Left" Margin="357,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="292,172,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
        <Button x:Name="btnLogIn" Content="Log In" HorizontalAlignment="Left" Margin="351,261,0,0" VerticalAlignment="Top" Height="48" Width="92" Click="btnLogIn_Click"/>

    </Grid>
</Window>
